{
  // options here to override JSHint defaults

  "asi": false,
  "bitwise": true,
  "boss": false,
  "browser": true,
  "camelcase": false,
  "curly": true,
  "debug": false,
  "eqeqeq": true,
  "eqnull": true,
  "es3": false,
  "esnext": true,
  "evil": false,
  "expr": false,
  "forin": true,
  "freeze": true,
  "funcscope": false,
  "globalstrict": false,
  "immed": true,
  "indent": 4,
  "iterator": false,
  "lastsemic": false,
  "latedef": "nofunc",
  "laxbreak": false,
  "laxcomma": false,
  "loopfunc": true,
  "maxcomplexity": 8,
  "maxdepth": 5,
  "maxerr": false,
  "maxlen": 150,
  "maxparams": 10,
  "maxstatements": 40,
  "moz": false,
  "multistr": false,
  "newcap": true,
  "noarg": true,
  "node": true,
  "noempty": true,
  "nonbsp": true,
  "nonew": true,
  "notypeof": false,
  "noyield": false,
  "plusplus": false,
  "proto": false,
  //"quotmark": "single",
  "scripturl": false,
  "shadow": false,
  "strict": false,
  "sub": true,
  "supernew": false,
  "undef": true,
  "unused": false,
  "validthis": false,

  "globals": {
    "angular"	 : false,
    "cordova"	 : false,
    "$"			 : false,
    "expect"     : false,
    "element"    : false,
    "inject"     : false,
    "describe"   : false,
    "it"         : false,
    "by"         : false,
    "before"     : false,
    "beforeEach" : false,
    "after"      : false,
    "afterEach"  : false,
    "qtonApp"	 : false,
    "JSInflate"  : false,
    "device"	 : false,
    "Camera" 	 : false,
    "LocalFileSystem" : false,
    "FTScroller" : false,
    "Keychain"	 : false
  }
}
